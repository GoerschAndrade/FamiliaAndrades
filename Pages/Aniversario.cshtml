@page
@model AniversarioModel
@{
    int Aniversariantes = DateTime.Now.Month;
    if (Aniversariantes == 01)
    {
        <meta http-equiv="refresh" content="0;/mesJaneiro" />
    }
    else if (Aniversariantes == 02)
    {
        <meta http-equiv="refresh" content="0;/mesFevereiro" />
    }
    else if (Aniversariantes == 03)
    {
        <meta http-equiv="refresh" content="0;/mesMarço" />
    }
    else if (Aniversariantes == 04)
    {
        <meta http-equiv="refresh" content="0;/mesAbril" />
    }
    if (Aniversariantes == 05)
    {
        <meta http-equiv="refresh" content="0;/mesMaio" />
    }
    if (Aniversariantes == 06)
    {
        <meta http-equiv="refresh" content="0;/mesJunho" />
    }
    if (Aniversariantes == 07)
    {
        <meta http-equiv="refresh" content="0;/mesJulho" />
    }
    if (Aniversariantes == 08)
    {
        <meta http-equiv="refresh" content="0;/mesAgosto" />
    }
    if (Aniversariantes == 09)
    {
        <meta http-equiv="refresh" content="0;/mesSetembro" />
    }
    if (Aniversariantes == 10)
    {
        <meta http-equiv="refresh" content="0;/mesOutubro" />
    }
    if (Aniversariantes == 11)
    {
        <meta http-equiv="refresh" content="0;/mesNovembro" />
    }
    if (Aniversariantes == 12)
    {
        <meta http-equiv="refresh" content="0;/mesDezembro" />
    }
}
